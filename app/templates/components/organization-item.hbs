<div class="row">  
  <div class="col-lg-8 col-sm-12">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">
          <small><span class="badge badge-country float-right ml-2">{{model.country.country_name}}</span>
          {{#each model.types as |type|}}
            <span class="badge badge-type float-right">{{type}}</span>
          {{/each}}</small>
          <img class="ror-id mb-1" src="/assets/ror-logo-small.png" alt="ROR ID"> {{#link-to "organizations.show" model.id class="card-link logo-link"}}https://ror.org/{{model.id}}{{/link-to}}
        </h5>
        <hr>

        <h4 class="card-title text-default">{{model.name}}</h4>
        {{#if (or aliases acronyms labels)}}
          <h6 class="card-subtitle mb-3 text-muted">
            {{aliases}}{{if (and aliases acronyms) ", " ""}}{{acronyms}}{{if (and (or aliases acronyms) labels) ", " ""}}{{labels}}
          </h6>
        {{/if}}

        <div class="description font-weight-normal">
          <div class="row"> 
            <div class="col-md-6">
              {{#if model.links}}
                <h6 class="mt-3 mb-0">Website</h6>
                {{#each model.links as |link|}}
                  <a target="_blank" rel="noopener" class="card-link" href={{link}}>{{link}}</a><br>
                {{/each}}
              {{/if}}
            </div>

            <div class="col-md-6">
              <h6 class="mt-3 mb-0">Other Identifiers</h6>
              <span class="text-default">GRID</span> <a target="_blank" rel="noopener" class="card-link" href="https://grid.ac/institutes/{{grid}}">{{grid}}</a><br>
              {{#if isni}}
                <span class="text-default">ISNI</span> <a target="_blank" rel="noopener" class="card-link" href="http://isni.org/isni/{{isni}}">{{isni}}</a><br>
              {{/if}}
              {{#if fundref}}
                <span class="text-default">Crossref Funder ID</span> <a target="_blank" class="card-link" rel="noopener" href="https://api.crossref.org/funders/{{fundref}}">{{fundref}}</a><br>
              {{/if}}
              {{#if wikidata}}
                <span class="text-default">Wikidata</span> <a target="_blank" rel="noopener" class="card-link" href="https://www.wikidata.org/wiki/{{wikidata}}">{{wikidata}}</a><br>
              {{/if}}
            </div>
          </div>
        </div>
      </div>
    </div>      
  </div>
</div>