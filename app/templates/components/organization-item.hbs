<div class="row">  
  <div class="col-lg-9 col-sm-12">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title text-primary">{{model.name}}</h4>
        {{#if (or aliases acronyms labels)}}
          <h6 class="card-subtitle mb-3 text-muted">
            {{aliases}}{{if (and aliases acronyms) ", " ""}}{{acronyms}}{{if (and (or aliases acronyms) labels) ", " ""}}{{labels}}
          </h6>
        {{/if}}

        <div class="description font-weight-normal">
          <div class="row"> 
            <div class="col-md-6">
              {{#if model.links}}
                <h6 class="mt-3 mb-0">URL</h6>
                {{#each model.links as |link|}}
                  <a target="_blank" rel="noopener" class="card-link" href={{link}}>{{link}}</a><br>
                {{/each}}
              {{/if}}
            </div>

            <div class="col-md-6">
              <h6 class="mt-3 mb-0">Other Identifiers</h6>
              <span class="text-primary">GRID</span> <a target="_blank" rel="noopener" class="card-link" shref="https://grid.ac/institutes/{{grid}}">{{grid}}</a><br>
              {{#if isni}}
                <span class="text-primary">ISNI</span> <a target="_blank" rel="noopener" class="card-link" href="http://isni.org/isni/{{isni}}">{{isni}}</a><br>
              {{/if}}
              {{#if fundref}}
                <span class="text-primary">Crossref Funder ID</span> <a target="_blank" class="card-link" rel="noopener" href="https://api.crossref.org/funders/{{fundref}}">{{fundref}}</a><br>
              {{/if}}
              {{#if wikidata}}
                <span class="text-primary">Wikidata</span> <a target="_blank" rel="noopener" class="card-link" href="https://www.wikidata.org/wiki/{{wikidata}}">{{wikidata}}</a><br>
              {{/if}}
            </div>
          </div>
        </div>

        <hr>

        <span class="badge badge-primary float-right ml-2">{{model.country.country_name}}</span>
        {{#each model.types as |type|}}
          <span class="badge badge-default float-right">{{type}}</span>
        {{/each}}
        {{#link-to "organizations.show" model.id class="card-link"}}<i class="fa fa-external-link"></i> https://ror.org/{{model.id}}{{/link-to}}
      </div>
    </div>      
  </div>
</div>