<div class="col-lg-8 col-sm-12">
  <ul class="pagination pagination-primary justify-content-center">
    {{#if previousPage}}
      <li class="page-item">
        {{#link-to 
          link 
          (query-params
          page=previousPage)
          class="page-link"
          aria-label="Previous"
        }}<span aria-hidden="true"><i class="fa fa-angle-double-left" aria-hidden="true"></i></span>
        {{/link-to}}
      </li>
    {{else}}
      <li class="page-item disabled">
        <a class="page-link"><span aria-hidden="true"><i class="fa fa-angle-double-left" aria-hidden="true"></i></span></a>
      </li>
    {{/if}}

    {{#each pageItems as |item|}}
      {{#if item.current}}
        <li class="page-item active">
          <a class="page-link">{{item.page}}</a>
        </li>
      {{else}}
        <li class="page-item">
          {{#link-to 
            link 
            (query-params
            page=item.page)
            class="page-link"
          }}{{item.page}}
          {{/link-to}}
        </li>
      {{/if}}
    {{/each}}

    {{#if nextPage}}
      <li class="page-item">
        {{#link-to 
          link 
          (query-params
          page=nextPage)
          class="page-link"
          aria-label="Next"
        }}<span aria-hidden="true"><i class="fa fa-angle-double-right" aria-hidden="true"></i></span>
        {{/link-to}}
      </li>
    {{else}}
      <li class="page-item">
        <a class="page-link"><span aria-hidden="true"><i class="fa fa-angle-double-right" aria-hidden="true"></i></span></a>
      </li>
    {{/if}}
  </ul>
</div>